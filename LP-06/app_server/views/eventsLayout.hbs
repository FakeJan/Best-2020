<html lang="sl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{title}}</title>

    {{!-- Stylesheets --}}
    <link rel="stylesheet" href="/stylesheets/bootstrap.sandstone.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" />

    <link rel="icon" type="image/x-icon" href="/images/GoodMeetsLogo.png">

    <script src="/javascripts/kontrolaNeprijavljeniUporabnik.js"></script>

</head>

<body>
    <!-- Navigation -->
    {{>main_nav}}
    <!-- /Navigation -->
    <main>
        <!-- sidebar -->
        <div id="main-sidebar-container" class="col-12 width pull-left">
            <div class="main-sidebar">
                <div class="row">
                    <div class="card" style="min-height: 812px;">
                        <div class="card-header">
                            <b>Filter</b>
                            <button class="btn btn-outline-secondary float-end" data-bs-toggle="collapse"
                                data-bs-target="#main-sidebar-container" aria-controls="main-sidebar-container"
                                onclick="closeNav()"><i class="fas fa-bars"></i></button>
                        </div>

                        <div class="accordion" id="accordionPanelsStayOpenExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                                        aria-controls="panelsStayOpen-collapseTwo">
                                        Kraj
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        <div class="form-group">
                                            <label for="locationInput2" style="margin-bottom: 0.5rem">Kraj</label>
                                            <input type="text" name="location" class="form-control filter"
                                                id="locationFilter2" placeholder="Izberi lokacijo"
                                                style="margin-bottom: 0.5rem">
                                        </div>
                                        <label for="range" class="form-label">Razdalja</label>
                                        <input id="rangeSlider" type="range" value="5" class="form-range" min="5"
                                            max="50" step="5" id="locationRange"
                                            oninput="this.nextElementSibling.value = this.value"><output>5</output> km
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                                        aria-controls="panelsStayOpen-collapseThree">
                                        Datum
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingThree">
                                    <div class="accordion-body">
                                        <label for="startDate2" class="float-start m-1">Od:</label>
                                        <div class="input-group mb-3 flex-row">
                                            <div class="input-daterange">
                                                <input type="text" name="sDate" id="startDate2"
                                                    value="{{date_formatter event.date}}" placeholder="Izberite datum"
                                                    class="form-control text-start
                                            input-daterange-text">
                                            </div>
                                            <i class="fas fa-calendar-week fa-lg
                                        text-center ms-2 input-daterange-icon"></i>
                                        </div>
                                        <label for="endDate2" class="float-start m-1">Do:</label>
                                        <div class="input-group mb-3 flex-row">
                                            <div class="input-daterange">
                                                <input type="text" name="eDate" id="endDate2"
                                                    value="{{date_formatter event.date}}" placeholder="Izberite datum"
                                                    class="form-control text-start
                                            input-daterange-text">
                                            </div>
                                            <i class="fas fa-calendar-week fa-lg
                                        text-center ms-2 input-daterange-icon"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="../events" id="removeFilter"><button class="btn btn-danger m-2"
                                    style="float: left;">Poƒçisti</button></a>
                            <a id="filterButton"><button id="confirmFilters" class="btn btn-primary m-2"
                                    style="float: right;" onclick="filter()">Potrdi</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end sidebar -->
        {{{body}}}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js">
    </script>
    <!-- !Need -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
    <script src="/javascripts/chatDisplay.js"></script>
    <!-- !Need -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script src="/javascripts/loggedUser.js"></script>
    <script src="/javascripts/code.js" async></script>
</body>

</html>